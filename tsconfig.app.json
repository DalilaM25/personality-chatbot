{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
 "module": "ESNext",        // ← Самое важное!
    "moduleResolution": "node", // ← Это тоже важно
    "target": "ES2020",        // ← Можно оставить текущее значение
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],   // ← Добавляет типы для import.meta.env
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
